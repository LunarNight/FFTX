@model FFTX.Models.User
@{
    Layout = null;
    
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>非凡图像show系统登录</title>
	<meta name="keywords" content="#">
	<meta name="content" content="#">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <link type="text/css" rel="stylesheet" href="Content/login.css">
</head>
<body class="login_bj" >
<div class="zhuce_body">
	<div class="logo"><a href="#"><img src="Content/img/logo.png" width="300" height="126" border="0"></a></div>
    <div class="zhuce_kong login_kuang">
    	<div class="zc">
        	<div class="bj_bai">
            <h3>登录</h3>
			@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { onsubmit = "return yz()" }))
           {
			           <p>@Html.TextBoxFor(model => model.User_Id, new { @class = "kuang_txt", placeholder = "用户名" })
				          @Html.PasswordFor(model => model.User_Password, new { @class = "kuang_txt", placeholder = "密码" })
			           <input type="submit" value="登录" class="btn_zhuce"/>
                       </p>
           }
            </div>
        	<div class="bj_right" style="text-align:center">
                <p style="margin-top:70px">没有账号，<a href="/Rigister">立即注册</a></p><br />
                <p ><a href="/FindPwd/ConfirmInfo">忘记密码</a></p><br />
            </div>
        </div>
        
    </div>
</div>

    <script type="text/javascript">
        function $(k) {
            return document.getElementById(k);
        }

        function yz() {
            if ($("User_Id").value=="") {
                alert("用户名不能为空");
                return false;
            }
            if ($("User_Password").value == "") {
                alert("密码不能为空");
                return false;
            }
            return true;
        }
       
    </script>

</body>
</html>
